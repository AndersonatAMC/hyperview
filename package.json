{
  "name": "hyperview",
  "version": "0.35.1",
  "main": "lib/index.js",
  "description": "React Native client for Hyperview XML",
  "homepage": "https://hyperview.org",
  "keywords": [
    "hyperview",
    "react-native-hyperview",
    "hyperview-xml"
  ],
  "bugs": {
    "url": "https://github.com/Instawork/hyperview/issues",
    "email": "engineering-contact@instawork.com"
  },
  "licence": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "scripts": {
    "build": "babel src --out-dir lib",
    "sync": "babel-node ./scripts/sync",
    "generate": "babel-node ./scripts/generate",
    "preversion": "yarn test && yarn build",
    "prettify": "pretty-quick",
    "format-xml": "./scripts/format-xml.sh",
    "release:patch": "npm version patch && npm publish && git push --follow-tags",
    "release:minor": "npm version minor && npm publish && git push --follow-tags",
    "release:major": "npm version major && npm publish && git push --follow-tags",
    "storybook": "storybook start -p 7007",
    "test:flow": "flow",
    "test:generators": "yarn generate test && git diff --quiet HEAD",
    "test:lint": "eslint src",
    "test:render": "npx patch-package && jest test/render.test.js --forceExit",
    "test:unit": "jest --testPathPattern src",
    "test:xmlserver": "http-server -c-1 -p 8085 ./examples",
    "test:validate-xml": "find examples/ -name '*.xml' | xargs xmllint --schema schema/hyperview.xsd --noout",
    "test": "yarn generate test && yarn test:flow && yarn test:lint && yarn test:render && yarn test:unit && yarn test:validate-xml"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "3.0.3",
    "tiny-emitter": "2.1.0",
    "url-parse": "1.4.3",
    "xmldom-instawork": "0.0.1"
  },
  "peerDependencies": {
    "react": ">= 16.13.1",
    "react-native": ">= 0.63.3",
    "react-native-keyboard-aware-scrollview": ">= 2.1.0",
    "react-native-webview": ">= 10.10.2"
  },
  "devDependencies": {
    "@babel/core": "7.8.4",
    "@babel/node": "7.2.2",
    "@babel/runtime": "7.8.4",
    "@storybook/addon-actions": "4.1.18",
    "@storybook/addon-storyshots": "4.1.18",
    "@storybook/react-native": "4.1.18",
    "babel-eslint": "10.0.1",
    "babel-jest": "26.6.3",
    "babel-plugin-module-resolver": "3.2.0",
    "babel-preset-react-native": "4.0.0",
    "chokidar": "2.1.2",
    "eslint": "5.16.0",
    "eslint-plugin-instawork": "0.6.1",
    "flow-bin": "0.122.0",
    "glob": "7.1.2",
    "http-server": "0.11.1",
    "humps": "2.0.1",
    "husky": "1.2.1",
    "jest": "26.6.3",
    "metro-react-native-babel-preset": "0.63.0",
    "mkdirp": "0.5.1",
    "patch-package": "6.2.0",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "react": "16.13.1",
    "react-dom": "16.8.0",
    "react-native": "0.63.3",
    "react-native-keyboard-aware-scrollview": "2.1.0",
    "react-navigation": "1.0.0-beta.11",
    "react-native-webview": "10.10.2",
    "react-test-renderer": "16.13.1"
  },
  "jest": {
    "preset": "react-native",
    "moduleNameMapper": {
      "\\.(png|jpg|jpeg|ttf|mp4|mov)$": "<rootDir>/test/assets-transformer.js"
    },
    "modulePathIgnorePatterns": [
      "./demo/"
    ],
    "setupFiles": [
      "./test/setup.js"
    ]
  }
}
