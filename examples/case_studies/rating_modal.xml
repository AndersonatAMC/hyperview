<doc xmlns="https://instawork.com/hyperview"
     xmlns:redux="https://instawork.com/hyperview-redux">
  <screen>
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style width="32"
             height="32"
             id="Header__Close"
             marginRight="16" />
      <style color="black"
             fontFamily="HKGrotesk-SemiBold"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="white"
             flex="1"
             id="Body" />
      <style backgroundColor="white"
             flex="1"
             id="Main" />
      <style color="black"
             fontFamily="HKGrotesk-Bold"
             lineHeight="40"
             fontSize="32"
             marginLeft="24"
             marginRight="24"
             marginTop="24"
             id="Title" />
      <style id="Section"
             borderBottomColor="#E1E3E3"
             borderBottomWidth="1"
             marginTop="24"
             marginBottom="24" />
      <style id="Section__Header"
             fontFamily="HKGrotesk-Bold"
             fontSize="20"
             lineHeight="24"
             marginLeft="24"
             marginRight="24"
             marginBottom="16" />
      <style id="ShiftItem"
             paddingLeft="24"
             paddingRight="24"
             flex="1"
             flexDirection="row"
             justifyContent="flex-start" />
      <style id="ShiftItem__Avatar"
             marginBottom="24"
             width="72"
             height="72"
             borderRadius="36"
             backgroundColor="#E1E3E3" />
      <style id="ShiftItem__Info"
             marginLeft="16"
             flex="1"
             flexDirection="column" />
      <style id="ShiftItem__WorkerName"
             color="#4E4D4D"
             fontFamily="HKGrotesk-Regular"
             fontSize="16"
             lineHeight="24" />
      <style id="ShiftItem__Details"
             color="#8D9494"
             fontFamily="HKGrotesk-Regular"
             fontSize="16"
             lineHeight="24" />
      <style id="RatingContainer"
             flex="1" />
      <style flex="1"
             flexDirection="row"
             marginTop="24"
             id="Rating"
             margin="0" />
      <style height="40"
             id="Rating__Star"
             marginRight="10"
             width="40" />
      <style id="Rating__Star--Filled" />
      <style id="BottomSheet"
             position="absolute"
             flex="1"
             flexGrow="1"
             bottom="0"
             left="0"
             right="0"
             height="80"
             borderTopWidth="1"
             borderTopColor="#e1e1e1"
             paddingTop="16"
             paddingBottom="16"
             paddingLeft="24"
             paddingRight="24" />
      <style id="BottomSheet__Button"
             height="48"
             justifyContent="center"
             alignItems="center"
             backgroundColor="#4778FF" />
      <style id="BottomSheet__Button--Disabled"
             backgroundColor="#80AAFF" />
      <style id="BottomSheet__ButtonLabel"
             color="white"
             fontFamily="HKGrotesk-Medium"
             fontSize="16"
             lineHeight="24" />
      <style id="WorkerInfo"
             flex="1"
             marginLeft="24"
             marginRight="24"
             marginTop="32"
             alignItems="center" />
      <style id="WorkerInfo__Avatar"
             height="72"
             width="72"
             borderRadius="36"
             backgroundColor="#E1E3E3" />
      <style id="WorkerInfo__Name"
             color="#4E4D4D"
             fontFamily="HKGrotesk-Bold"
             fontSize="16"
             lineHeight="24"
             marginTop="16" />
      <style id="WorkerInfo__Details"
             color="#4E4D4D"
             fontFamily="HKGrotesk-Regular"
             fontSize="16"
             lineHeight="24" />
      <style id="WorkerInfo__Time"
             color="#8D9494"
             fontFamily="HKGrotesk-Regular"
             fontSize="16"
             lineHeight="24" />
      <style flex="1"
             marginLeft="24"
             marginRight="24"
             id="FormGroup"
             marginTop="48" />
      <style flex="1"
             id="outerInput" />
      <style borderBottomColor="#E1E1E1"
             borderBottomWidth="1"
             borderColor="#4E4D4D"
             flex="1"
             fontFamily="HKGrotesk-Regular"
             fontSize="16"
             id="input"
             paddingBottom="8"
             paddingTop="8" />
      <style borderBottomColor="#4778FF"
             id="input--focused" />
      <style borderBottomColor="#FF4847"
             color="#FF4847"
             id="input--error" />
      <style borderColor="#4E4D4D"
             fontFamily="HKGrotesk-Bold"
             fontSize="16"
             id="label"
             lineHeight="24"
             marginBottom="8" />
      <style borderColor="#FF4847"
             fontFamily="HKGrotesk-Regular"
             fontSize="16"
             id="help"
             lineHeight="24"
             marginTop="16" />
      <style color="#FF4847"
             id="help--error" />
    </styles>
    <body style="Body">
      <header style="Header">
        <image action="close"
               source="/case_studies/close@2x.png"
               href="/index.xml"
               style="Header__Close" />
      </header>
      <view style="Main"
            scroll="true">
        <text style="Title">Rate the Instaworker</text>
        <view style="WorkerInfo">
          <image source="/case_studies/image.jpg"
                 style="WorkerInfo__Avatar" />
          <text style="WorkerInfo__Name">Jake Tepperman</text>
          <text style="WorkerInfo__Details">Event Server, Private Residence</text>
          <text style="WorkerInfo__Time">Fri Aug 3, 7:00 PM - 1:00 AM</text>
          <view id="rating"
                style="RatingContainer">
            <view id="star0"
                  style="Rating">
              <image source="/case_studies/star_empty@2x.png"
                     action="replace-inner"
                     href="#star1"
                     style="Rating__Star"
                     target="rating" />
              <image source="/case_studies/star_empty@2x.png"
                     action="replace-inner"
                     href="#star2"
                     style="Rating__Star"
                     target="rating" />
              <image source="/case_studies/star_empty@2x.png"
                     action="replace-inner"
                     href="#star3"
                     style="Rating__Star"
                     target="rating" />
              <image source="/case_studies/star_empty@2x.png"
                     action="replace-inner"
                     href="#star4"
                     style="Rating__Star"
                     target="rating" />
              <image source="/case_studies/star_empty@2x.png"
                     action="replace-inner"
                     href="#star5"
                     style="Rating__Star"
                     target="rating" />
            </view>
          </view>
        </view>
        <view style="FormGroup">
          <textarea focusStyles="input input--focused"
                    outerStyles="outerInput"
                    placeholder="Any other feedback?"
                    placeholderTextColor="#8D9494"
                    style="input"></textarea>
        </view>
      </view>
      <view style="BottomSheet">
        <view href="/case_studies/_rating_save.xml"
              delay="500"
              id="saveButtonContainer"
              target="saveButtonContainer"
              show-during-load="savingButton"
              hide-during-load="saveButton"
              action="replace-inner">
          <view id="saveButton"
                style="BottomSheet__Button">
            <text id="saveLabel"
                  style="BottomSheet__ButtonLabel">Done</text>
          </view>
          <view hide="true"
                id="savingButton"
                style="BottomSheet__Button BottomSheet__Button--Disabled">
            <text id="savingLabel"
                  style="BottomSheet__ButtonLabel">Saving...</text>
          </view>
        </view>
      </view>
    </body>
