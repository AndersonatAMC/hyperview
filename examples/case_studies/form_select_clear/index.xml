<doc xmlns="https://hyperview.org/hyperview">
  <screen>

    <styles>
      <style id="Body"
             backgroundColor="white"
             flex="1"
             paddingTop="40" />
      <style id="Select"
             marginTop="24" />
      <style id="Select__Separator"
             borderTopColor="#e1e3e3"
             borderTopWidth="1"
             marginLeft="24"
             marginRight="24" />
      <style id="Select__Option"
             alignItems="center"
             flex="1"
             flexDirection="row"
             justifyContent="space-between"
             paddingBottom="16"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="16" />
      <style id="Select__RadioOuter"
             borderColor="#bdc4c4"
             borderRadius="10"
             borderWidth="1"
             height="20"
             width="20">
        <modifier pressed="true">
          <style borderColor="#8d9494"
                 borderWidth="1" />
        </modifier>
        <modifier selected="true">
          <style borderColor="#4778ff"
                 borderWidth="2" />
        </modifier>
      </style>
      <style id="Select__RadioInner"
             borderRadius="5"
             height="10"
             marginLeft="3"
             marginTop="3"
             opacity="0"
             width="10">
        <modifier selected="true">
          <style backgroundColor="#4778ff"
                 opacity="1" />
        </modifier>
      </style>
      <style id="Select__Label"
             color="#4e4d4d"
             fontSize="16"
             fontWeight="normal"
             lineHeight="18">
        <modifier selected="true">
          <style color="#312f2f" />
        </modifier>
        <modifier pressed="true">
          <style color="#312f2f" />
        </modifier>
      </style>
      <style id="Buttons"
             alignItems="center"
             flex="1"
             flexDirection="row"
             justifyContent="space-between"
             paddingBottom="16"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="16" />
      <style id="Button"
             padding="24" />
      <style id="Button__Text"
             color="blue"
             fontSize="16"
             fontWeight="700" />
      <style id="Description"
             fontSize="16"
             fontWeight="600"
             margin="24" />
    </styles>
    <body scroll="true"
          style="Body">
      <form>
        <view id="form">
          <select-multiple name="choice"
                           style="Select">
            <view style="Select__Separator" />
            <option style="Select__Option"
                    id="choice_sf"
                    value="sf">
              <text style="Select__Label">Downtown San Francisco</text>
              <view style="Select__RadioOuter">
                <view style="Select__RadioInner"></view>
              </view>
            </option>
            <view style="Select__Separator" />
            <option style="Select__Option"
                    id="choice_id"
                    id="choice_eb"
                    value="eb">
              <text style="Select__Label">East Bay</text>
              <view style="Select__RadioOuter">
                <view style="Select__RadioInner"></view>
              </view>
            </option>
            <view style="Select__Separator" />
            <option style="Select__Option"
                    id="choice_nb"
                    value="nb">
              <text style="Select__Label">North Bay</text>
              <view style="Select__RadioOuter">
                <view style="Select__RadioInner"></view>
              </view>
            </option>
            <view style="Select__Separator" />
            <option style="Select__Option"
                    id="choice_sb"
                    value="sb">

              <behavior trigger="select" href="#selectMessage" action="replace-inner" target="message" />

              <text style="Select__Label">South Bay</text>
              <view style="Select__RadioOuter">
                <view style="Select__RadioInner"></view>
              </view>
            </option>
          </select-multiple>
        </view>
        <view style="Buttons">
          <view style="Button">
            <text style="Button__Text">Clear selection</text>
            <behavior action="deselect-option" target="choice_sf" />
            <behavior action="deselect-option" target="choice_eb" />
            <behavior action="deselect-option" target="choice_nb" />
            <behavior action="deselect-option" target="choice_sb" />
          </view>
          <view style="Button">
            <text style="Button__Text">Select all</text>
            <behavior action="select-option" target="choice_sf" />
            <behavior action="select-option" target="choice_eb" />
            <behavior action="select-option" target="choice_nb" />
            <behavior action="select-option" target="choice_sb" />
          </view>
        </view>

        <view style="Buttons">
          <view style="Button" href="/case_studies/form_select_clear/submit.xml" target="message" action="replace-inner" show-during-load="spinner" hide-during-load="message" delay="200">
            <text style="Button__Text">Submit</text>
          </view>
        </view>

        <spinner id="spinner" hide="true" />
        <view id="message" style="Description">
        </view>

        <view hide="true">
          <text id="selectMessage">
            Selected option
          </text>
        </view>

      </form>
    </body>
  </screen>
</doc>
