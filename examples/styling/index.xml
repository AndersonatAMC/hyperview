<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    margin="24"
    padding="16"
    borderWidth="2"
    borderColor="red"
    borderRadius="4"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />
  <rule id="Main" flex="1" />
</styles>

<screen>


<body style="Body">
<header style="Header">
  <text style="Header__Back" href="/index.xml" action="back">Back</text>
  <text style="Header__Title">Styling</text>
</header>
  <list>
    <item key="flex" style="Item" href="/styling/flex.xml" show-during-load="loadingScreen">
      <text style="Item__Label">Flex Styling</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="text" style="Item" href="/styling/text.xml" show-during-load="loadingScreen">
      <text style="Item__Label">Text Styling</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="button" style="Item" href="/styling/button.xml" show-during-load="loadingScreen">
      <text style="Item__Label">Button Styling</text>
      <text style="Item__Chevron">></text>
    </item>
  </list>
</body>
</screen>

<screen id="loadingScreen">
<styles>
