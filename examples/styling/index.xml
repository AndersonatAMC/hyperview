<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule borderColor="red"
            borderRadius="4"
            borderWidth="2"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Description"
            margin="24"
            padding="16" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Styling</text>
      </header>
      <list>
        <item href="/styling/flex.xml"
              key="flex"
              show-during-load="loadingScreen"
              style="Item">
          <text style="Item__Label">Flex Styling</text>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item href="/styling/text.xml"
              key="text"
              show-during-load="loadingScreen"
              style="Item">
          <text style="Item__Label">Text Styling</text>
          <text style="Item__Chevron">&gt;</text>
        </item>
        <item href="/styling/button.xml"
              key="button"
              show-during-load="loadingScreen"
              style="Item">
          <text style="Item__Label">Button Styling</text>
          <text style="Item__Chevron">&gt;</text>
        </item>
      </list>
    </body>
  </screen>
  <screen id="loadingScreen">
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/navigation/index.xml"
              style="Header__Back">Back</text>
      </header>
    </body>
  </screen>
</doc>
