<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-Regular"
    fontSize="16"
    margin="24"
    marginBottom="0"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />

  <rule id="View"
    flex="1"
    padding="8"
    marginLeft="24"
    marginRight="24"
    marginTop="8"
    backgroundColor="#63CB76"
    borderRadius="16"
    height="32"
  />
</styles>

<animated>
  <value id="example1" from="0" property="opacity" />
  <value id="example2" from="0" property="opacity" />
  <value id="example3" from="0" property="opacity" />

  <value id="example4" from="0" property="opacity" />
  <value id="example5" from="0" property="opacity" />
  <value id="example6" from="0" property="opacity" />

  <animation type="parallel" id="example1">
    <animation value="example1" to="1" duration="2000" />
    <animation value="example2" to="1" duration="2000" />
    <animation value="example3" to="1" duration="2000" />
  </animation>

  <animation type="parallel" id="example2">
    <animation value="example4" to="1" duration="2000" delay="200" />
    <animation value="example5" to="1" duration="2000" delay="400" />
    <animation value="example6" to="1" duration="2000" delay="600" />
  </animation>
</animated>

<screen>
<header style="Header">
  <text style="Header__Back" href="/index.xml" action="back">Back</text>
  <text style="Header__Title">Parallel</text>
</header>

<body style="Body" scroll="true">
  <text style="Description">Parallel</text>
  <view style="View" animations="example1" animatedValues="example1"></view>
  <view style="View" animations="example1" animatedValues="example2"></view>
  <view style="View" animations="example1" animatedValues="example3"></view>

  <text style="Description">Parallel With Delays</text>
  <view style="View" animations="example2" animatedValues="example4"></view>
  <view style="View" animations="example2" animatedValues="example5"></view>
  <view style="View" animations="example2" animatedValues="example6"></view>
</body>
</screen>

</doc>
