<doc>
  <styles>
    <rule id="Header"
          height="72"
          alignItems="center"
          backgroundColor="white"
          borderBottomWidth="1"
          borderBottomColor="#eee"
          paddingTop="24"
          paddingLeft="24"
          paddingRight="24"
          flexDirection="row" />
    <rule id="Header__Back"
          color="blue"
          fontFamily="HKGrotesk-SemiBold"
          fontSize="16"
          paddingRight="16" />
    <rule id="Header__Title"
          fontFamily="HKGrotesk-SemiBold"
          fontSize="24"
          color="black" />
    <rule id="Body"
          backgroundColor="white"
          flex="1" />
    <rule id="Description"
          fontFamily="HKGrotesk-Regular"
          fontSize="16"
          margin="24"
          marginBottom="0" />
    <rule id="Item"
          borderBottomWidth="1"
          borderBottomColor="#eee"
          height="48"
          flex="1"
          flexDirection="row"
          alignItems="center"
          justifyContent="space-between"
          paddingLeft="24"
          paddingRight="24" />
    <rule id="Item__Label"
          fontSize="18"
          fontFamily="HKGrotesk-Regular" />
    <rule id="Item__Chevron"
          fontSize="18"
          fontFamily="HKGrotesk-Bold" />
    <rule id="View"
          flex="1"
          padding="8"
          margin="24"
          backgroundColor="#63CB76"
          borderRadius="16"
          height="40" />
    <rule id="Main"
          flex="1" />
  </styles>
  <animated>
    <value id="example1"
           from="0"
           property="opacity" />
    <value id="example2"
           from="-500"
           property="left" />
    <value id="example3"
           from="0"
           property="width" />
    <animation type="sequence"
               id="example1">
      <animation value="example1"
                 to="1"
                 duration="2000" />
    </animation>
    <animation type="sequence"
               id="example2">
      <animation value="example2"
                 to="0"
                 duration="2000" />
    </animation>
    <animation type="sequence"
               id="example3">
      <animation value="example3"
                 to="300"
                 duration="2000" />
    </animation>
  </animated>
  <screen>
    <body style="Body"
          scroll="true">
      <header style="Header">
        <text style="Header__Back"
              href="/index.xml"
              action="back">Back</text>
        <text style="Header__Title">Timing</text>
      </header>
      <view style="Main"
            scroll="true">
        <text style="Description">Animated Opacity</text>
        <view style="View"
              animations="example1"
              animatedValues="example1"></view>
        <text style="Description">Animated Position</text>
        <view style="View"
              animations="example2"
              animatedValues="example2"></view>
        <text style="Description">Animated Width</text>
        <view style="View"
              animations="example3"
              animatedValues="example3"></view>
      </view>
    </body>
  </screen>
</doc>
