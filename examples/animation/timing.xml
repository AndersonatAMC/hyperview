<doc xmlns="https://instawork.com/hyperview">
  <animated>
    <value from="0"
           id="example1"
           property="opacity" />
    <value from="-500"
           id="example2"
           property="left" />
    <value from="0"
           id="example3"
           property="width" />
    <animation id="example1"
               type="sequence">
      <animation duration="2000"
                 to="1"
                 value="example1" />
    </animation>
    <animation id="example2"
               type="sequence">
      <animation duration="2000"
                 to="0"
                 value="example2" />
    </animation>
    <animation id="example3"
               type="sequence">
      <animation duration="2000"
                 to="300"
                 value="example3" />
    </animation>
  </animated>
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule backgroundColor="#63CB76"
            borderRadius="16"
            flex="1"
            height="40"
            id="View"
            margin="24"
            padding="8" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body scroll="true"
          style="Body">
      <header style="Header">
        <text action="back"
              href="/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Timing</text>
      </header>
      <view scroll="true"
            style="Main">
        <text style="Description">Animated Opacity</text>
        <view animatedValues="example1"
              animations="example1"
              style="View" />
        <text style="Description">Animated Position</text>
        <view animatedValues="example2"
              animations="example2"
              style="View" />
        <text style="Description">Animated Width</text>
        <view animatedValues="example3"
              animations="example3"
              style="View" />
      </view>
    </body>
  </screen>
</doc>
