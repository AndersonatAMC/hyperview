<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule borderColor="red"
            borderRadius="4"
            borderWidth="2"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Description"
            margin="24"
            padding="16" />
      <rule alignItems="center"
            backgroundColor="#eee"
            flex="1"
            flexDirection="row"
            height="48"
            id="List__Header"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="List__HeaderText" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule color="red"
            id="Item__Label--Special" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/list/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Section List with Refresh</text>
      </header>
      <text style="Description">Try multiple pull-to-refresh gestures on the section list below.</text>
      <sectionlist action="replace"
                   delay="700"
                   href="/sectionlist/_refresh_load.xml"
                   trigger="refresh">
        <section>
          <sectiontitle style="List__Header">
            <text style="List__HeaderText">Section 1</text>
          </sectiontitle>
          <item key="1"
                style="Item">
            <text style="Item__Label">List 1</text>
          </item>
          <item key="2"
                style="Item">
            <text style="Item__Label">List 2</text>
          </item>
          <item key="3"
                style="Item">
            <text style="Item__Label">List 3</text>
          </item>
        </section>
      </sectionlist>
    </body>
  </screen>
</doc>
