<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule backgroundColor="#63CB76"
            borderRadius="16"
            flex="1"
            flexDirection="row"
            id="Button"
            justifyContent="center"
            margin="24"
            padding="24" />
      <rule color="white"
            fontFamily="HKGrotesk-Bold"
            fontSize="24"
            id="Button__Label" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/dynamic_elements/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Pull to Refresh</text>
      </header>
      <view style="Main">
        <text style="Description">Pull to refresh on the button will replace the content.</text>
        <view action="replace-inner"
              href="/dynamic_elements/_replace_inner_fragment.xml"
              style="Button"
              trigger="refresh">
          <text style="Button__Label">Refresh me</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
