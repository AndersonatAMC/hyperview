<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-Regular"
    fontSize="16"
    margin="24"
    marginBottom="0"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />

  <rule id="Button"
    padding="24"
    backgroundColor="#63CB76"
    borderRadius="16"
    margin="24"
    flex="1"
    flexDirection="row"
    justifyContent="center"
  />
  <rule id="Button__Label"
    color="white"
    fontFamily="HKGrotesk-Bold"
    fontSize="24"
  />
  <rule id="Main" flex="1" />
</styles>

<screen>


<body style="Body">
<header style="Header">
  <text style="Header__Back" href="/dynamic_elements/index.xml" action="back">Back</text>
  <text style="Header__Title">Pull to Refresh</text>
</header>
<view style="Main">
  <text style="Description">
    Pull to refresh on the button will replace the content.
  </text>

  <view style="Button" href="/dynamic_elements/_replace_inner_fragment.xml" action="replace-inner" trigger="refresh">
    <text style="Button__Label">Refresh me</text>
  </view>
</view>
</body>
</screen>

</doc>
