<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule backgroundColor="#63CB76"
            borderRadius="16"
            flex="1"
            flexDirection="row"
            id="Button"
            justifyContent="center"
            margin="24"
            padding="24" />
      <rule color="white"
            fontFamily="HKGrotesk-Bold"
            fontSize="24"
            id="Button__Label" />
      <rule borderColor="#63CB76"
            borderRadius="16"
            borderWidth="4"
            flex="1"
            flexDirection="row"
            id="BorderButton"
            justifyContent="center"
            margin="8"
            padding="8" />
      <rule id="BorderButton--Root"
            margin="24" />
      <rule color="#222"
            fontFamily="HKGrotesk-Bold"
            fontSize="24"
            id="BorderButton__Label" />
      <rule alignItems="center"
            flex="1"
            id="ButtonWrapper" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/dynamic_elements/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Replace Inner</text>
      </header>
      <view scroll="true"
            style="Main">
        <text style="Description">Tapping the button below will request an XML fragment and replace the children of the element with the response.</text>
        <view action="replace-inner"
              href="/dynamic_elements/_replace_inner_fragment.xml"
              style="Button">
          <text style="Button__Label">Press me</text>
        </view>
        <text style="Description">In this example, the replaced element also has a replace-inner action, allowing for a nested interaction.</text>
        <view action="replace-inner"
              href="/dynamic_elements/_replace_inner_fragment2.xml"
              style="BorderButton">
          <text style="BorderButton__Label">Press me</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
