<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-Regular"
    fontSize="16"
    margin="24"
    marginBottom="0"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />

  <rule id="Button"
    padding="24"
    backgroundColor="#63CB76"
    borderRadius="16"
    margin="24"
    flex="1"
    flexDirection="column"
    alignItems="center"
    justifyContent="center"
  />
  <rule id="Button__Label"
    color="white"
    fontFamily="HKGrotesk-Bold"
    fontSize="24"
  />

  <rule id="Container"
    borderRadius="16"
    borderWidth="2"
    borderColor="#e1e1e1"
    padding="24"
    margin="24"
  />
  <rule id="Container__Label"
    color="black"
    fontFamily="HKGrotesk-Regular"
    fontSize="16"
  />
  <rule id="Main" flex="1" />
</styles>

<screen>


<body style="Body">
<header style="Header">
  <text style="Header__Back" href="/dynamic_elements/index.xml" action="back">Back</text>
  <text style="Header__Title">Show Multiple Indicators</text>
</header>
<view style="Main" scroll="1">
  <text style="Description">
    Tapping the button below will request an XML fragment and replace the child element in the button. An indicator appears during loading.
  </text>

  <view
      style="Button"
      href="/dynamic_elements/_target_sibling_fragment.xml" 
      action="replace"
      target="container"
      show-during-load="myIndicator1 myIndicator2"
      delay="300"
  >
    <text style="Button__Label">Press me</text>
  </view>

  <spinner hide="true" id="myIndicator1" />
  <view id="container" style="Container">
  </view>
  <spinner hide="true" id="myIndicator2" />
</view>
</body>
</screen>

</doc>
