<doc>
  <styles>
    <rule id="Header"
          height="72"
          alignItems="center"
          backgroundColor="white"
          borderBottomWidth="1"
          borderBottomColor="#eee"
          paddingTop="24"
          paddingLeft="24"
          paddingRight="24"
          flexDirection="row" />
    <rule id="Header__Back"
          color="blue"
          fontFamily="HKGrotesk-SemiBold"
          fontSize="16"
          paddingRight="16" />
    <rule id="Header__Title"
          fontFamily="HKGrotesk-SemiBold"
          fontSize="24"
          color="black" />
    <rule id="Body"
          backgroundColor="white"
          flex="1" />
    <rule id="Description"
          fontFamily="HKGrotesk-Regular"
          fontSize="16"
          margin="24"
          marginBottom="0" />
    <rule id="Item"
          borderBottomWidth="1"
          borderBottomColor="#eee"
          height="48"
          flex="1"
          flexDirection="row"
          alignItems="center"
          justifyContent="space-between"
          paddingLeft="24"
          paddingRight="24" />
    <rule id="Item__Label"
          fontSize="18"
          fontFamily="HKGrotesk-Regular" />
    <rule id="Item__Chevron"
          fontSize="18"
          fontFamily="HKGrotesk-Bold" />
    <rule id="Button"
          padding="24"
          backgroundColor="#63CB76"
          borderRadius="16"
          margin="24"
          flex="1"
          flexDirection="column"
          alignItems="center"
          justifyContent="center" />
    <rule id="Button__Label"
          color="white"
          fontFamily="HKGrotesk-Bold"
          fontSize="24" />
    <rule id="Container__Element"
          flex="1"
          flexDirection="row"
          borderBottomWidth="1"
          borderColor="#e1e1e1"
          paddingTop="24"
          paddingBottom="24"
          marginLeft="24"
          marginRight="24" />
    <rule id="Container__Label"
          marginLeft="8"
          flex="1"
          color="black"
          fontFamily="HKGrotesk-Regular"
          fontSize="16" />
    <rule id="Container__Labels--Load"
          flex="1" />
    <rule id="Container__Label--Load"
          marginLeft="8"
          flex="1"
          backgroundColor="#e1e1e1"
          height="14"
          marginTop="4" />
    <rule id="Container__Image"
          height="64"
          width="64"
          borderRadius="32" />
    <rule id="Container__Image--Load"
          height="64"
          width="64"
          borderRadius="32"
          backgroundColor="#e1e1e1" />
    <rule id="Main"
          flex="1" />
  </styles>
  <screen>
    <body style="Body">
      <header style="Header">
        <text style="Header__Back"
              href="/dynamic_elements/index.xml"
              action="back">Back</text>
        <text style="Header__Title">Shimmer Indicator</text>
      </header>
      <view style="Main"
            scroll="1">
        <text style="Description">Tapping the button below will request an XML fragment and replace the child element in the button. An indicator appears during loading.</text>
        <view style="Button"
              href="/dynamic_elements/_shimmer_fragment.xml"
              action="append"
              target="container"
              show-during-load="myIndicator"
              delay="700">
          <text style="Button__Label">Press me</text>
        </view>
        <view hide="true"
              id="myIndicator"
              style="Container__Element">
          <view style="Container__Image--Load" />
          <view style="Container__Labels--Load">
            <view style="Container__Label--Load" />
            <view style="Container__Label--Load" />
            <view style="Container__Label--Load" />
          </view>
        </view>
        <view id="container"
              style="Container"></view>
      </view>
    </body>
  </screen>
</doc>
