<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule alignItems="center"
            backgroundColor="#63CB76"
            borderRadius="16"
            flex="1"
            flexDirection="column"
            id="Button"
            justifyContent="center"
            margin="24"
            padding="24" />
      <rule color="white"
            fontFamily="HKGrotesk-Bold"
            fontSize="24"
            id="Button__Label" />
      <rule borderColor="#e1e1e1"
            borderRadius="16"
            borderWidth="2"
            id="Container"
            margin="24"
            padding="24" />
      <rule color="black"
            fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Container__Label" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/dynamic_elements/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Target Parent</text>
      </header>
      <view scroll="1"
            style="Main">
        <text style="Description">Tapping the button below will request an XML fragment and replace the parent element, including the button itself.</text>
        <view id="container"
              style="Container">
          <view action="replace"
                href="/dynamic_elements/_target_sibling_fragment.xml"
                style="Button"
                target="container">
            <text style="Button__Label">Press me</text>
          </view>
          <text style="Container__Label">Waiting...</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
