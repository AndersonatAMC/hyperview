<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule backgroundColor="#63CB76"
            borderRadius="16"
            flex="1"
            flexDirection="row"
            id="Button"
            justifyContent="center"
            margin="24"
            padding="24" />
      <rule color="white"
            fontFamily="HKGrotesk-Bold"
            fontSize="24"
            id="Button__Label" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/dynamic_elements/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Fragment Replace</text>
      </header>
      <view scroll="1"
            style="Main">
        <text style="Description">Tapping the button below will replace the content with a copy of the fragment below.</text>
        <view action="replace"
              href="#fragment"
              style="Button">
          <text style="Button__Label">Press me</text>
        </view>
        <view id="fragment"
              style="Button">
          <text style="Button__Label">Fragment for Replace</text>
        </view>
        <text style="Description">Tapping the button below will replace the content with a copy of a hidden fragment below.</text>
        <view action="replace"
              href="#hidden-fragment"
              style="Button">
          <text style="Button__Label">Press me</text>
        </view>
        <view hide="true">
          <view id="hidden-fragment"
                style="Button">
            <text style="Button__Label">From hidden fragment</text>
          </view>
        </view>
      </view>
    </body>
  </screen>
</doc>
