<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule alignItems="center"
            backgroundColor="#63CB76"
            borderRadius="16"
            flex="1"
            flexDirection="column"
            id="Button"
            margin="24"
            padding="24" />
      <rule color="white"
            fontFamily="HKGrotesk-Bold"
            fontSize="24"
            id="Button__Label" />
      <rule flex="1"
            id="Tree"
            marginLeft="16"
            marginTop="8" />
      <rule id="Tree--Root"
            marginLeft="24"
            marginTop="24" />
      <rule color="#4E4D4D"
            fontFamily="HKGrotesk-Bold"
            fontSize="12"
            id="Tree__Label" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/list/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Append</text>
      </header>
      <view scroll="true"
            style="Main">
        <text style="Description">Tapping the button below will request an XML fragment and append it to the button.</text>
        <view action="append"
              href="/dynamic_elements/_append_fragment.xml"
              style="Button">
          <text style="Button__Label">Press me</text>
        </view>
        <text style="Description">In this example, the replaced element also has an href with an append action, demonstrating loading of a nested structure.</text>
        <view action="append"
              href="/dynamic_elements/_append_fragment2.xml"
              style="Tree,Tree--Root">
          <text style="Tree__Label">1. Lorem</text>
          <text style="Tree__Label">2. Ipsum</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
