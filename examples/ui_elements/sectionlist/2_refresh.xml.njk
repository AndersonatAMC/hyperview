---
title: "Section List With Refresh"
permalink: "/ui_elements/sectionlist/refresh.xml"
tags: ui_elements_sectionlist
---
{% extends 'base.xml.njk' %}

{% block styles %}
  <style
    id="List__Header"
    alignItems="center"
    backgroundColor="#eee"
    flex="1"
    flexDirection="row"
    height="48"
    paddingLeft="24"
    paddingRight="24"
  />
  <style id="List__HeaderText" fontSize="18" fontWeight="bold" />
{% endblock %}

{% block container %}
  <section-list
    action="replace"
    delay="700"
    href="/ui_elements/sectionlist/_refresh_load.xml"
    trigger="refresh"
  >
    <section>
      <section-title style="List__Header">
        <text style="List__HeaderText">Section 1</text>
      </section-title>
      <item key="1" style="Item">
        <text style="Item__Label">List 1</text>
      </item>
      <item key="2" style="Item">
        <text style="Item__Label">List 2</text>
      </item>
      <item key="3" style="Item">
        <text style="Item__Label">List 3</text>
      </item>
    </section>
  </section-list>
{% endblock %}
