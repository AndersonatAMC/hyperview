<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule fontFamily="HKGrotesk-Medium"
            fontSize="24"
            id="Basic"
            margin="24" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="16"
            id="Bold"
            margin="24" />
      <rule backgroundColor="#63CB76"
            color="white"
            fontFamily="HKGrotesk-Bold"
            fontSize="32"
            id="Color"
            margin="24"
            padding="16" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/dynamic_elements/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">Text</text>
      </header>
      <view scroll="true"
            style="Main">
        <text style="Description">Text</text>
        <text style="Basic">Hello, world!</text>
        <text style="Description">Nested Text</text>
        <text style="Basic">Hello, 
        <text style="Bold">World of 
        <text style="Color">HyperView!</text></text></text>
      </view>
    </body>
  </screen>
</doc>
