<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-Regular"
    fontSize="16"
    margin="24"
    marginBottom="0"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />

  <rule id="Basic"
    fontSize="24"
    fontFamily="HKGrotesk-Medium"
    margin="24"
  />
  <rule id="Bold"
    fontSize="16"
    fontFamily="HKGrotesk-Bold"
    margin="24"
  />
  <rule id="Color"
    backgroundColor="#63CB76"
    fontSize="32"
    fontFamily="HKGrotesk-Bold"
    color="white"
    margin="24"
    padding="16"
  />
</styles>

<screen>
<body style="Body" scroll="true">
  <header style="Header">
    <text style="Header__Back" href="/dynamic_elements/index.xml" action="back">Back</text>
    <text style="Header__Title">Text</text>
  </header>

  <text style="Description">
    Text
  </text>
  <text style="Basic">Hello, world!</text>

  <text style="Description">
    Nested Text
  </text>
  <text style="Basic">
    Hello,
    <text style="Bold">
      World of
      <text style="Color">
        HyperView!
      </text>
    </text>
  </text>
</body>
</screen>

</doc>
