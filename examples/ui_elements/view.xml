<doc xmlns="https://instawork.com/hyperview">
  <screen>
    <styles>
      <rule alignItems="center"
            backgroundColor="white"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flexDirection="row"
            height="72"
            id="Header"
            paddingLeft="24"
            paddingRight="24"
            paddingTop="24" />
      <rule color="blue"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="16"
            id="Header__Back"
            paddingRight="16" />
      <rule color="black"
            fontFamily="HKGrotesk-SemiBold"
            fontSize="24"
            id="Header__Title" />
      <rule backgroundColor="white"
            flex="1"
            id="Body" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="16"
            id="Description"
            margin="24"
            marginBottom="0" />
      <rule alignItems="center"
            borderBottomColor="#eee"
            borderBottomWidth="1"
            flex="1"
            flexDirection="row"
            height="48"
            id="Item"
            justifyContent="space-between"
            paddingLeft="24"
            paddingRight="24" />
      <rule fontFamily="HKGrotesk-Regular"
            fontSize="18"
            id="Item__Label" />
      <rule fontFamily="HKGrotesk-Bold"
            fontSize="18"
            id="Item__Chevron" />
      <rule borderColor="#e1e1e1"
            borderWidth="1"
            flex="1"
            id="Border"
            margin="24"
            padding="8" />
      <rule backgroundColor="#63CB76"
            borderRadius="16"
            height="40"
            id="Styled" />
      <rule flex="1"
            flexDirection="row"
            id="Flex"
            justifyContent="space-between" />
      <rule id="Flex__Child"
            width="40" />
      <rule flex="1"
            id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="/dynamic_elements/index.xml"
              style="Header__Back">Back</text>
        <text style="Header__Title">View</text>
      </header>
      <view scroll="true"
            style="Main">
        <text style="Description">View</text>
        <view style="Border" />
        <text style="Description">Nested Views</text>
        <view style="Border">
          <view style="Border">
            <view style="Border" />
          </view>
        </view>
        <text style="Description">Styled</text>
        <view style="Border,Styled" />
        <text style="Description">Flex</text>
        <view style="Border,Flex">
          <view style="Flex__Child,Styled" />
          <view style="Flex__Child,Styled" />
          <view style="Flex__Child,Styled" />
        </view>
      </view>
    </body>
  </screen>
</doc>
