<doc xmlns="https://hyperview.org/hyperview">
  <screen>
    <styles>
      <style alignItems="center"
             backgroundColor="white"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flexDirection="row"
             height="72"
             id="Header"
             paddingLeft="24"
             paddingRight="24"
             paddingTop="24" />
      <style color="blue"
             fontWeight="600"
             fontSize="16"
             id="Header__Back"
             paddingRight="16" />
      <style color="black"
             fontWeight="600"
             fontSize="24"
             id="Header__Title" />
      <style backgroundColor="white"
             flex="1"
             id="Body" />
      <style fontWeight="normal"
             fontSize="16"
             id="Description"
             margin="24"
             marginBottom="0" />
      <style alignItems="center"
             borderBottomColor="#eee"
             borderBottomWidth="1"
             flex="1"
             flexDirection="row"
             height="48"
             id="Item"
             justifyContent="space-between"
             paddingLeft="24"
             paddingRight="24" />
      <style fontWeight="normal"
             fontSize="18"
             id="Item__Label" />
      <style fontWeight="bold"
             fontSize="18"
             id="Item__Chevron" />
      <style backgroundColor="#63CB76"
             borderRadius="16"
             flex="1"
             flexDirection="row"
             id="Button"
             justifyContent="center"
             margin="24"
             padding="24" />
      <style color="white"
             fontWeight="bold"
             fontSize="24"
             id="Button__Label" />
      <style flex="1"
             id="Main" />
    </styles>
    <body style="Body">
      <header style="Header">
        <text action="back"
              href="#"
              style="Header__Back">Back</text>
        <text style="Header__Title">Pull to Refresh</text>
      </header>
      <view style="Main">
        <text style="Description">Pull to refresh on the button will replace the content.</text>
        <view action="replace-inner"
              href="/behaviors/_replace_inner_fragment.xml"
              style="Button"
              trigger="refresh">
          <text style="Button__Label">Refresh me</text>
        </view>
      </view>
    </body>
  </screen>
</doc>
