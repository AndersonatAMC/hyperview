<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    margin="24"
    padding="16"
    borderWidth="2"
    borderColor="red"
    borderRadius="4"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />
</styles>

<screen>
<header style="Header">
  <text style="Header__Title">Hyperview Examples</text>
</header>

<body style="Body" scroll="true">
  <text
    style="Description"
    href="/list/_infinite_scroll_page2.xml"
    target="replace"
  >
    Tap to replace...
  </text>
  <list>
    <item key="layout" style="Item">
      <text style="Item__Label">Layout</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="styling" style="Item">
      <text style="Item__Label">Styling</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="animation" style="Item">
      <text style="Item__Label">Animation</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="navigation" style="Item">
      <text style="Item__Label">Navigation</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="list" style="Item" href="/list/index.xml" trigger="press">
      <text style="Item__Label">List</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="sectionlist" style="Item">
      <text style="Item__Label">Section List</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="dynamic-elements" style="Item">
      <text style="Item__Label">Dynamic Elements</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="forms" style="Item">
      <text style="Item__Label">Forms</text>
      <text style="Item__Chevron">></text>
    </item>
  </list>
</body>
</screen>

</doc>
