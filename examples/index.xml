<doc>

<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
  <rule id="Description"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    margin="24"
    padding="16"
    borderWidth="2"
    borderColor="red"
    borderRadius="4"
  />
  <rule id="Item"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    height="48"
    flex="1"
    flexDirection="row"
    alignItems="center"
    justifyContent="space-between"
    paddingLeft="24"
    paddingRight="24"
  />
  <rule id="Item__Left"
    flex="1"
    flexDirection="row"
  />
  <rule id="Item__Label"
    fontSize="18"
    fontFamily="HKGrotesk-Regular"
  />
  <rule id="Item__Chevron"
    fontSize="18"
    fontFamily="HKGrotesk-Bold"
  />
</styles>

<screen>
<header style="Header">
  <text style="Header__Title">Hyperview Examples</text>
</header>

<body style="Body" scroll="true">
  <list>
    <item key="layout" style="Item" href="/ui_elements/index.xml" show-during-load="loadingScreen">
      <view style="Item__Left">
        <text style="Item__Label">UI Elements</text>
      </view>
      <text style="Item__Chevron">></text>
    </item>

    <item key="list" style="Item" href="/list/index.xml" show-during-load="loadingScreen">
      <text style="Item__Label">List</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="sectionlist" style="Item" href="/sectionlist/index.xml" show-during-load="loadingScreen">
      <view style="Item__Left">
        <text style="Item__Label">Section List</text>
      </view>
      <text style="Item__Chevron">></text>
    </item>

    <item key="forms" style="Item" href="/forms/index.xml" show-during-load="loadingScreen">
      <view style="Item__Left">
        <text style="Item__Label">Forms</text>
      </view>
      <text style="Item__Chevron">></text>
    </item>

    <item key="navigation" style="Item" href="/navigation/index.xml" show-during-load="loadingScreen">
      <view style="Item__Left">
        <text style="Item__Label">Navigation</text>
      </view>
      <text style="Item__Chevron">></text>
    </item>

    <item key="dynamic-elements" style="Item" href="/dynamic_elements/index.xml" show-during-load="loadingScreen">
      <text style="Item__Label">Dynamic Elements</text>
      <text style="Item__Chevron">></text>
    </item>

    <item key="styling" style="Item" href="/styling/index.xml" show-during-load="loadingScreen">
      <view style="Item__Left">
        <text style="Item__Label">Styling</text>
      </view>
      <text style="Item__Chevron">></text>
    </item>

    <item key="animation" style="Item" href="/animation/index.xml" show-during-load="loadingScreen">
      <view style="Item__Left">
        <text style="Item__Label">Animation</text>
      </view>
      <text style="Item__Chevron">></text>
    </item>


  </list>
</body>
</screen>

<screen id="loadingScreen">
<styles>
  <rule id="Header"
    height="72"
    alignItems="center"
    backgroundColor="white"
    borderBottomWidth="1"
    borderBottomColor="#eee"
    paddingTop="24"
    paddingLeft="24"
    paddingRight="24"
    flexDirection="row"
  />
  <rule id="Header__Back"
    color="blue"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="16"
    paddingRight="16"
  />
  <rule id="Header__Title"
    fontFamily="HKGrotesk-SemiBold"
    fontSize="24"
    color="black"
  />
  <rule id="Body"
    backgroundColor="white"
    flex="1"
  />
</styles>
<header style="Header">
  <text style="Header__Back" href="/navigation/index.xml" action="back">Back</text>
</header>
<body style="Body" />
</screen>

</doc>
